<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .oprett {
            height: 100%;
            width:100%;
            display: inline-block;
            background-color: lightgray;
            border-spacing: 15px;

        }

        .button {
            background-color: #BBBBBB;
            width: 20%;
            height: 25%;
        }

        .boxs {
            width: 200px;
            height: 18px;
        }

        .lbl {
            width: 170px;
            color: black;
            font-weight: bold;
        }

        .obs {
            font-style: italic;
            font-size: 8px;
        }

    </ui:style>

    <g:HTMLPanel>

        <center>
            <g:VerticalPanel styleName="{style.oprett}">

                <!-- Tekst bokse her -->
                <g:HorizontalPanel>
                    <g:Label styleName="{style.lbl}">Fornavn:</g:Label>
                    <g:TextBox ui:field="fornavnBox" styleName="{style.boxs}"></g:TextBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label styleName="{style.lbl}">Efternavn:</g:Label>
                    <g:TextBox ui:field="efternavnBox" styleName="{style.boxs}"></g:TextBox>
                </g:HorizontalPanel>

                <!-- Køn RadioButton her -->
                <g:HorizontalPanel>
                    <g:Label styleName="{style.lbl}">Køn:</g:Label>
                    <g:RadioButton name="mand" ui:field="rmand">Mand</g:RadioButton>
                    <g:RadioButton name="kvinde" ui:field="rkvinde">Kvinde</g:RadioButton>
                </g:HorizontalPanel>


                <!-- Brugernavn- samt password bokse her -->
                <g:HorizontalPanel>
                    <g:Label styleName="{style.lbl}">Brugernavn:</g:Label>
                    <g:TextBox ui:field="brugernavnBox" styleName="{style.boxs}"></g:TextBox>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label styleName="{style.lbl}">Password:</g:Label>
                    <g:PasswordTextBox ui:field="passwordBox" styleName="{style.boxs}"></g:PasswordTextBox>
                </g:HorizontalPanel>


                <!-- Valg af medlemstype her -->
                <g:VerticalPanel>
                    <g:HorizontalPanel>
                        <g:Label styleName="{style.lbl}">Medlemstype:</g:Label>
                        <g:RadioButton name="mdA" ui:field="mdA">A</g:RadioButton>
                        <g:RadioButton name="mdB" ui:field="mdB">B</g:RadioButton>
                        <g:RadioButton name="mdC" ui:field="mdC">C</g:RadioButton>
                    </g:HorizontalPanel>
                    <g:Label styleName="{style.obs}" >(OBS: Medlemstype A er medlemsskab med fitness uden hold- eller instruktørtimer, medlemskab B er med fitness og hold, medlemsskab C er med fitness samt hold- og instruktørtræning)</g:Label>
                </g:VerticalPanel>

                <!-- Opret bruger knap -->
                <g:Button ui:field="knap" styleName="{style.button}">Opret bruger</g:Button>


            </g:VerticalPanel>
        </center>

    </g:HTMLPanel>


</ui:UiBinder>