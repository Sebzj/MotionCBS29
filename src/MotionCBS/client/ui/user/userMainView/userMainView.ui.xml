<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>


        .title {
            font-size: 30px;
            font-weight: bold;
            color: black;
            padding-left: 550px;
            padding-top: 25px;

        }

        .south {

        }

        .btn {
            height: 45px;
            width: 100px;
            border: none;
            border-radius: 2px;
            font-size: 15px;
            background-color: #333;

            cursor: hand;
            color: #fff;
            padding: 5px;
            margin-bottom: 10px;

        }

        .footer {

        }<!--css? til vores menu -->
        .menu {
            padding: 30px;
            background-color: beige;

        }

        <!--css til vores header -->
        .north  {
            height: 100%;
            width: 100%;
            background-color: olive;
        }

    </ui:style>


    <g:HTMLPanel>

        <g:DockLayoutPanel unit="EM" width="100%" height="100%">
            <!--Header-->
            <g:north size="5">
                <g:HTMLPanel styleName="{style.north}">
                    <g:Label styleName="{style.title}" text="MotionCBS"/>
                </g:HTMLPanel>
            </g:north>

            <!--Footer-->
            <g:south size="3">
                <g:HTMLPanel styleName="{style.south}">
                    <g:Label styleName="{style.footer}" text="Motion CBS - Din religion i fitness"/>
                </g:HTMLPanel>
            </g:south>

            <!--Menu til venstre (west)-->
            <g:west size="10">
                <g:FlowPanel styleName="{style.menu}">
                    <g:VerticalPanel>
                    <g:Button styleName="{style.btn}" text="Forside" ui:field="usersBtn"/>
                    <g:Button styleName="{style.btn}" text="Dine informationer" ui:field="infoBtn"/>
                    <g:Button styleName="{style.btn}" text="Settings" ui:field="settingsBtn"/>
                    <g:Button styleName="{style.btn}" text="Logout" ui:field="logoutBtn"/>
                    </g:VerticalPanel>
                </g:FlowPanel>
            </g:west>

            <!--Center indhold-->
            <g:center>
                <g:DeckLayoutPanel ui:field="centerPanel"/>
            </g:center>

        </g:DockLayoutPanel>

    </g:HTMLPanel>
</ui:UiBinder>