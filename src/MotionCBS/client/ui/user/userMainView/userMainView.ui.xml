<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>



        .title {
            font-size: 30px;
            font-weight: bold;
            color: #fff;
        }


    </ui:style>


    <g:HTMLPanel>

        <g:DockLayoutPanel unit="EM" width="100%" height="100%">

            <g:north size="5">
                <g:HTMLPanel styleName="north">
                    <g:Label styleName="{style.title}" text="DÃ˜KBook"/>
                </g:HTMLPanel>
            </g:north>

            <g:south size="3">
                <g:HTMLPanel styleName="south">
                    <g:Label styleName="footer" text="Copyright: Andy, Filip, Magnus &amp; Michael"/>
                </g:HTMLPanel>
            </g:south>

            <g:west size="10">
                <g:FlowPanel styleName="menu">
                    <g:Button styleName="btn menuBtn" text="Friends" ui:field="usersBtn"/>
                    <g:Button styleName="btn menuBtn" text="Message" ui:field="messageBtn"/>
                    <g:Button styleName="btn menuBtn" text="Inbox" ui:field="inboxBtn"/>
                    <g:Button styleName="btn menuBtn" text="Settings" ui:field="settingsBtn"/>
                    <g:Button styleName="btn menuBtn" text="Logout" ui:field="logoutBtn"/>
                </g:FlowPanel>
            </g:west>

            <g:center>
                <g:DeckLayoutPanel ui:field="centerPanel"/>
            </g:center>

        </g:DockLayoutPanel>

    </g:HTMLPanel>
</ui:UiBinder>