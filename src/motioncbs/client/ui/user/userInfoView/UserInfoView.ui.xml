<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">


    <ui:style>
        .pager {
            /*
            display: flex;
            align-items: center;
            justify-content: center;
            */
        }

        .changeInfoBtn {



        }
    </ui:style>

    <g:HTMLPanel>
       <g:HorizontalPanel>
           
                <g:Label text="Dine informationer:" />
                <g:Button ui:field="changeInfoBtn" styleName="{style.changeInfoBtn}" text="Change information"/>

       </g:HorizontalPanel>
        <g:DockLayoutPanel unit="EM" width="100%" height="100%">
            <!-- DataGrid. -->
            <g:center>
                <c:DataGrid ui:field='dataGrid' visible="true"/>
            </g:center>

            <!-- Pager. -->
            <g:south size="3">
                <c:SimplePager styleName="{style.pager}" ui:field='pager' location="CENTER" />

            </g:south>

        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>