<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
<ui:style>


    .lbl {
        font-style: italic;
        font-size: 8px;

    }</ui:style>
<g:HTMLPanel>

    <g:Label>Venligst udfyld nedenstående og klik derefter ok for gemme ændringerne</g:Label>

    <g:VerticalPanel spacing="15">
        <!--fornavn -->
        <g:HTMLPanel >
            <g:Label  text="Firstname:" />
            <g:TextBox  ui:field="firstNameBox"/>
        </g:HTMLPanel>


        <!--efternavn -->
        <g:FlowPanel >
            <g:Label  text="Lastname:"/>
            <g:TextBox ui:field="lastNameBox"/>
        </g:FlowPanel>

        <!--age -->
        <g:FlowPanel >
            <g:Label  text="Age:"/>
            <g:TextBox  ui:field="ageBox"/>
        </g:FlowPanel>

        <!--Username -->
        <g:FlowPanel >
            <g:Label  text="Username:"/>
            <g:TextBox  ui:field="usernameBox"/>
        </g:FlowPanel>

        <!--Password -->
        <g:FlowPanel >
            <g:Label  text="Password:"/>
            <g:TextBox  ui:field="passwordBox"/>
        </g:FlowPanel>

        <!--gender-->
        <g:FlowPanel >
            <g:Label  text="Gender:"/>
            <g:CheckBox  name="Male" text="Male" ui:field="maleCheckbox"/>
            <g:CheckBox  name="Female" text="Female" ui:field="femaleCheckbox"/>
        </g:FlowPanel>

        <!--customertype-->
        <g:FlowPanel >
            <g:Label  text="Customertype:"/>
            <g:RadioButton   name="A" text="A" ui:field="radioButtonA"/>
            <g:RadioButton   name="B" text="B" ui:field="radioButtonB"/>
            <g:RadioButton   name="C" text="C" ui:field="radioButtonC"/>
        </g:FlowPanel>
        <g:Label styleName="{style.lbl}">(OBS: Medlemstype A er medlemsskab med fitness uden hold- eller instruktørtimer, medlemskab B er med fitness og hold, medlemsskab C er med fitness samt hold- og instruktørtræning)</g:Label>

        <g:HorizontalPanel width="100">
            <!-- aendrer informationer knap-->
            <g:Button  ui:field="changeUserInfBtn" text="Change"/>

        </g:HorizontalPanel>

    </g:VerticalPanel>

</g:HTMLPanel>


</ui:UiBinder>